<%= form_with model: message do |f| %>
  <%= render 'messages/error_message', message: message %>

  <div class="row">
    <%= f.label :title, 'タイトル', class: 'col-sm-1' %>
    <%= f.text_field :title, class: 'w-25' %>
  </div>

  <div class="row">
    <%= f.label :context, 'メッセージ', class: 'col-sm-1' %>
    <%= f.text_field :context, class: 'w-25' %>
  </div>

  <%= f.submit '保存', class: 'btn btn-primary rounded' %>
<% end %>