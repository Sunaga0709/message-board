<h1>メッセージ一覧</h1>

<% if @messages.any? %>
  <table class="table table-striped table-bordered"> 
      <tr style="background-color: #aaa">
        <th>id</th>
        <th>タイトル</th>
        <th>メッセージ</th>
      </tr>
      <% @messages.each do |msg| %>
        <tr>
          <td><%= link_to msg.id, message_path(msg) %></td>
          <td><%= msg.title %></td>
          <td><%= msg.context %></td>
        </tr>
      <% end %>

    <%== pagy_nav(@pagy) %>
  </table>
<% else %>
  <h3 class="d-flex justify-content-center text-danger">メッセージ未登録</h3>
<% end %>

<%= link_to '新規作成', new_message_path %>